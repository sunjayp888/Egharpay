<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <div id="workerDocuments" class="ng-cloak" ng-show="model.documents.length > 0">
        <div class="col-xs-12">
            <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer ng-cloak" ng-show="model.documents.length > 0" role="grid" aria-describedby="datatable-fixed-header_info">
                <thead>
                <tr role="row">
                    <th ng-click="model.order('DocumentCategoryName')" ng-class="model.orderClass('DocumentCategoryName')">Type</th>
                    <th ng-click="model.order('Filename')" ng-class="model.orderClass('Filename')">Filename</th>
                    <th ng-click="model.order('CreatedDateUtc')" ng-class="model.orderClass('CreatedDateUtc')">Uploaded Date</th>
                    <th ng-click="model.order('UploadedBy')" ng-class="model.orderClass('UploadedBy')">Uploaded By</th>
                    <th ng-click="model.order('ValidFromDate')" ng-class="model.orderClass('ValidFromDate')">Valid From</th>
                    <th ng-click="model.order('ValidToDate')" ng-class="model.orderClass('ValidToDate')">Valid To</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="document in model.documents" class="odd gradeX cursor" ng-click="$event.originalEvent.ngClickHandled || model.downloadFile(document.DocumentGuid)">
                    <td><span ng-bind="document.DocumentCategoryName"></span></td>
                    <td><span ng-bind="document.Filename"></span></td>
                    <td><span ng-bind="document.UploadedDate | date"></span></td>
                    <td><span ng-bind="document.UploadedBy"></span></td>
                    <td><span ng-bind="document.ValidFromDate | date"></span></td>
                    <td><span ng-bind="document.ValidToDate | date"></span></td>
                    <td>
                        <div class="btn-group pull-right">
                            <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true;">
                                <i class="fa fa-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a ng-click="model.downloadFile(document.DocumentGuid); $event.originalEvent.ngClickHandled = true;">View Document</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12">
            @Html.Partial("Pagination/_pagination")
        </div>
    </div>
    <div class="col-xs-12">
        <label ng-bind="model.searchMessage"></label>
    </div>
</div>